{   
    "rewrites": [
        { "source": "/(.*)", "destination": "/" },
        { "source": "/api/(.*)", "destination": "/api" }
    ],
    "version": 2,
    "builds": [
        {
            "src": "./api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}